<div class="container my-5">
    <div class="row">
        <div class="col">
            <h1 class="text-center mb-5">Daftar Contact</h1>

            <a href="/contact/tambah" class="btn btn-primary mb-3">Tambah Contact</a>

            <% if (msg.length !==0) { %>
                <div class="alert alert-success mt-0" role="alert">
                    <%= msg %>
                </div>
                <% } %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nama</th>
                    <th scope="col">Email</th>
                    <th scope="col" class="text-center">Aksi</th> 
                </tr>
            </thead>
            <tbody>
                <% if (contact.length===0) { %>
                    <tr>
                        <td colspan="3" class="text-center">
                            <div class="alert alert-danger" role="alert">
                                Data Contact belum ada
                            </div>
                        </td>
                    </tr>
                    <% } else { %>
                        <% contact.forEach(con=> { %>
                            <tr>
                                <td>
                                    <%= con.nama %>
                                </td>
                                <td>
                                    <%= con.email %>
                                </td>
                                <td class="text-center">
                                    <a href="/contact/<%= con._id %>" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Detail
                                    </a>
                                    <a href="/contact/edit/<%= con._id %>" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } %>
            </tbody>

        </table>

        </div>
    </div>
</div>